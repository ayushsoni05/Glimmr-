MONGO_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/glimmrr?retryWrites=true&w=majority
JWT_SECRET=replace-with-a-strong-secret
JWT_EXPIRES_IN=7d

# Enable cautious index cleanup for legacy indexes (dev only). Set to 'true' to allow
# the server to drop the legacy `mobile_1` index or run the migration script instead.
# AUTO_DROP_LEGACY_INDEX=true
# Stripe / OpenAI (existing keys if used)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
OPENAI_API_KEY=your_openai_key
PRICE_API_KEY=your_price_api_key

# OTP / Auth settings (optional overrides)
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RESEND_INTERVAL_SECONDS=60
OTP_LOCK_DURATION_MINUTES=10

# SMTP for sending emails (recommended)
SMTP_HOST=smtp.mailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
MAIL_FROM=no-reply@yourdomain.com

# Phone verification: prefer Firebase client-side phone auth. If you need
# server-side SMS, configure your provider here. Twilio is no longer used by
# default in this project.
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_VERIFY_SERVICE_SID=
# TWILIO_PHONE_NUMBER=
# TWILIO_MESSAGING_SERVICE_SID=
